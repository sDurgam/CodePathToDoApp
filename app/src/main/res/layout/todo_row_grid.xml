<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vcardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8sp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/todoname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:scrollbars="horizontal|vertical"
                style="@style/flatUIReviewText"
                />
            <com.cengalabs.flatui.views.FlatButton
                android:background="@drawable/high_icon"
                android:id="@+id/todopriority"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                style="@style/flatUIReviewText"/>
            <ImageButton
                android:id="@+id/edittoolBarBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_action_edit"
                android:layout_gravity="right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >
            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/tododuedate"
                android:layout_weight="0.70"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_marginLeft="5dp"
                style="@style/flatUIReviewText"/>
            <com.cengalabs.flatui.views.FlatTextView
               android:id="@+id/tododuetime"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_marginLeft="5dp"
                style="@style/flatUIReviewText"/>
            <!--<ImageButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/ic_action_edit"-->
                <!--android:layout_gravity="right"-->
                <!--android:visibility="invisible"-->
                <!--/>-->
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
